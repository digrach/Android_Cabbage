<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/greenLight"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >
    
    <Button
        android:id="@+id/buttonWhatIs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="What is Cabbage?"
        android:onClick="openWhatIs" />

    <Button
        android:id="@+id/buttonSignUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/buttonWhatIs"
        android:layout_below="@+id/buttonWhatIs"
        android:layout_marginTop="23dp"
        android:text="Sign Up" 
        android:onClick="openSignUp"/>

    <Button
        android:id="@+id/buttonLogIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/buttonSignUp"
        android:layout_alignBottom="@+id/buttonSignUp"
        android:layout_alignLeft="@+id/buttonWhatIs"
        android:text="Log In"
        android:onClick="openLogIn" />

    <TextView
        android:id="@+id/usernameTest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttonWhatIs"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="101dp"
        android:text="Welcome to Cabbage"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_above="@+id/buttonWhatIs"
        android:layout_centerHorizontal="true"
        android:src="@drawable/cabbage_image_alpha" />

</RelativeLayout>