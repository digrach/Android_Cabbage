<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/greenLight"
    android:padding="0px"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ItemSummaryActivity" >

    <EditText
        android:id="@+id/itemName"
        android:layout_width="400dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/itemIcon"
        android:background="@color/greyDark"
        android:clickable="false"
        android:cursorVisible="false"
        android:ems="10"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:fontFamily="Verdana"
        android:gravity="center"
        android:inputType=""
        android:text="@string/ItemName"
        android:textAlignment="4"
        android:textColor="#daead3" 
        android:textSize="40sp">
    </EditText>

    <ImageView
        android:id="@+id/itemIcon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_above="@+id/linearLayout1"
        android:layout_alignParentRight="true"
        android:background="@color/greenDark"
        android:src="@drawable/ic_launcher" />
    
        
        
        <TextView
            android:id="@+id/itemValue"
            android:paddingTop="5dp"
             android:paddingLeft="5dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Value"
            android:textSize="30sp" 
            android:layout_below="@+id/itemIcon" />
        <TextView
            android:id="@+id/itemDesc"
            android:paddingTop="5dp"
             android:paddingLeft="5dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/itemValue"
            android:text="Desc"
            android:textSize="30sp" />
        <TextView
            android:id="@+id/itemLocDesc"
            android:paddingTop="5dp"
             android:paddingLeft="5dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/itemDesc"
            android:text="LocDesc"
            android:textSize="30sp" />
        <TextView
            android:id="@+id/itemCollected"
            android:paddingTop="5dp"
            android:paddingLeft="5dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/itemLocDesc"
            android:text="IsCollected?"
            android:textSize="30sp" />
        

</RelativeLayout>